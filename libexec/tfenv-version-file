#!/usr/bin/env bash
# Usage: tfenv version-file
# Summary: Detect the file that sets the current tfenv version
set -e
[ -n "${TFENV_DEBUG}" ] && set -x

find_local_version_file() {
  local root="${1}"
  while ! [[ "${root}" =~ ^//[^/]*$ ]]; do

    # a version could be a range, ie 'required_version = "~> 0.9.11,<0.12.3"'
    # we want to separate those, get rid of anything that is not a version and then use the first occurence
    # if the user specifies the upper range first - it's their decision
    versions=( $(grep -R required_version --include '*tf' ./* | tr ',' ' ' | tr -c -d '0-9. ' ) )
    version=${versions[1]}

    if [[ $version =~ [0-9.]+ ]]; then
      echo "$version" > "${root}/.terraform-version"
    fi

    if [ -e "${root}/.terraform-version" ]; then
      echo "${root}/.terraform-version"
      return 0
    fi
    [ -n "${root}" ] || break
    root="${root%/*}"
  done
  return 1
}

find_local_version_file "${TFENV_DIR}" || find_local_version_file "${HOME}" || echo "${TFENV_ROOT}/version"
